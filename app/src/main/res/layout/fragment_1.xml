<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fg1"
    android:background="@color/mau3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Home"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mau3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvLambaithi"
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:src="@drawable/hinh2" />

            <ImageView
                android:id="@+id/imvKetqua"
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/hinh3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvHoclithuyet"
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:src="@drawable/hinh1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/hinh4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:src="@drawable/hinh5" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/hinh6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/circle" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/circle" />
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/circle" />

    </LinearLayout>
</LinearLayout>